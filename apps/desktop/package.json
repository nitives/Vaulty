{
  "name": "desktop",
  "version": "1.0.3",
  "description": "Your local-first scrapbook for screenshots, notes, and links.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "build:web": "npm run build:web --prefix ../..",
    "prep:web": "node scripts/prep-web.mjs",
    "start": "electron .",
    "package": "npm run build:web && npm run prep:web && npm run build && electron-builder --win nsis",
    "publish": "npm run build:web && npm run prep:web && npm run build && electron-builder --win nsis --publish always"
  },
  "keywords": [
    "electron",
    "nextjs",
    "scrapbook"
  ],
  "author": "nitives",
  "license": "ISC",
  "build": {
    "appId": "com.nitives.vaulty",
    "productName": "Vaulty",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "icons/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/web/.next/standalone",
        "to": "web/.next/standalone"
      },
      {
        "from": "resources/web/.next/static",
        "to": "web/.next/static"
      },
      {
        "from": "resources/web/public",
        "to": "web/public"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nitives",
        "repo": "Vaulty"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/ico/icon-rounded.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-${version}.${ext}",
      "include": "installer.nsh",
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "cheerio": "^1.2.0",
    "chokidar": "^5.0.0",
    "electron-updater": "^6.8.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "app-builder-bin": "^4.2.0",
    "electron": "33.4.11",
    "electron-builder": "^25.0.0",
    "typescript": "^5.0.0"
  }
}
