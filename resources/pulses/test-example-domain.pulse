name: "Vaulty Pulse Test (Example Domain)"
id: "vaulty-test-example-domain"
heartbeat: "5m"

anchor:
  url: "https://example.com/"
  select: "h1"
  attribute: "innerText"

flow:
  - step: 1
    action: "fetch"
    url: "https://example.com/"
    extract:
      latest_link:
        select: "a"
        attribute: "href"
      title:
        select: "h1"
        attribute: "innerText"
      summary:
        select: "p"
        attribute: "innerText"

  - step: 2
    action: "fetch"
    url: "{{latest_link}}"
    extract:
      title:
        select: "h1"
        attribute: "innerText"
      content:
        select: "p"
        attribute: "innerText"
